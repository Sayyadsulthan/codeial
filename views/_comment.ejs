<li  id="comment-<%= comment._id %>">                        
    <p>
        <% if(locals.user){ %>

            <% if(  comment.user.id == locals.user.id || locals.user.id==post.user.id ){ %>
                
                <small>
                    <a class="delete-comment-button" href="/comments/destroy/<%= comment.id %>">
                        <i class="fa-solid fa-trash"></i> 
                    </a>
                </small>
            <% } %>

            
        <% } %>
    
          
        <small>

            <%= comment.content %>
            <br>
            <small>
                <%= comment.user.name %>
            </small>
            
        </small>

        <% if(locals.user ){ %>
            <small>
                <a  href="/likes/toggle/?id=<%= comment.id %>&type=Comment">
                   <% let likeduser; %>
                   <% for(temp of comment.likes){ %>
                    <% if(temp.user == user.id){ %>
                        <%likeduser= temp.user; %>
                        <% break; %>
                        <% } %>
                        <% } %>
                        
                   <% if(comment.likes.length>0 && likeduser == user.id){ %>
                        <label for=""><i class="fa-solid fa-heart"></i> <%= comment.likes.length %></label>
                   <% }else{ %>
                        <label for=""><i class="fa-regular fa-heart"></i> <%= comment.likes.length %></label>
                   <% } %> 
                </a>
            </small>
            <% } %>
    </p>
</li>